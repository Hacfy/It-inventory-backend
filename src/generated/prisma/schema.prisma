  name             String
  email            String    @unique
  password         String
  phone            String
  role             Role      @default(ADMIN)
  resetToken       String?
  resetTokenExpiry DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @default(now()) @updatedAt

